<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campos da primeira bebida -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_layout"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bebida 1"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etNomeBebida1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome da Bebida"
            android:inputType="text"/>

        <EditText
            android:id="@+id/etVolume1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Volume (ml)"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/etGrau1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teor alcoólico (%)"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/etPreco1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Preço (R$)"
            android:inputType="numberDecimal"/>
    </LinearLayout>

    <!-- Container para bebidas adicionais -->
    <LinearLayout
        android:id="@+id/containerBebidasAdicionais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <!-- Botões -->
    <Button
        android:id="@+id/btnAdicionarBebida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar Bebida"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular Melhor Custo-Benefício"
        android:layout_marginTop="8dp"/>

    <!-- Resultado -->
    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"/>
</LinearLayout>